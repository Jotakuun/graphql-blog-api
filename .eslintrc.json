{
    "env": {
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": ["error", "single", {
            "avoidEscape": true,
            "allowTemplateLiterals": true
        }],
        "semi": [
            "error",
            "always"
        ],
        "console": 0,
        "react/jsx-sort-prop-types": 0,
        "react/require-extension": 0,
        "react/wrap-multilines": 0
    }
}